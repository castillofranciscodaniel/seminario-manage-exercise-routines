<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      spacing="10" alignment="CENTER" style="-fx-padding: 10;">

    <TableView fx:id="exerciseTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="Nombre de Ejercicio" fx:id="nameColumn" prefWidth="200"/>
            <TableColumn text="Descripción" fx:id="descriptionColumn" prefWidth="500"/>
            <TableColumn text="Duración" fx:id="durationColumn" prefWidth="200"/>
            <TableColumn text="Tipo" fx:id="typeColumn" prefWidth="200"/>
        </columns>
    </TableView>

    <Button text="Crear" onAction="#handleCreateExercise" prefWidth="150"/>
    <Button text="Editar" onAction="#handleEditExercise" prefWidth="150"/>
    <Button text="Eliminar" onAction="#handleDeleteExercise" prefWidth="150"/>

</VBox>