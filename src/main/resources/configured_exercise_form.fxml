<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10">
    <Label text="Ejercicio:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <ComboBox fx:id="exerciseComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Orden:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="orderField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Repeticiones:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="repetitionsField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Series:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="seriesField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Descanso (s):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="restField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Button text="Guardar" onAction="#handleSaveConfiguredExercise" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
</GridPane>
