<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      spacing="10" alignment="CENTER" style="-fx-padding: 10;">

    <TableView fx:id="routineTable" prefWidth="600">
        <columns>
            <TableColumn text="Nombre" fx:id="nameColumn" prefWidth="150"/>
            <TableColumn text="Descripción" fx:id="descriptionColumn" prefWidth="250"/>
            <TableColumn text="Duración" fx:id="durationColumn" prefWidth="100"/>
            <TableColumn text="Dificultad" fx:id="difficultyLevelColumn" prefWidth="100"/>
            <TableColumn text="Tipo" fx:id="trainingTypeColumn" prefWidth="100"/>
        </columns>
    </TableView>

    <Button text="Crear Rutina" onAction="#handleCreateRoutine" prefWidth="150"/>
    <Button text="Editar Rutina" onAction="#handleEditRoutine" prefWidth="150"/>
    <Button text="Eliminar Rutina" onAction="#handleDeleteRoutine" prefWidth="150"/>

</VBox>
