<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:id="vbox" alignment="CENTER" spacing="10">

    <Label text="Login" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="emailField" promptText="Email" text="jane.smith@example.com"/>
    <PasswordField fx:id="passwordField" promptText="Password" text="password123"/>

    <Button text="Login" onAction="#handleLogin" />
</VBox>

