<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER" spacing="10" padding="20">

    <Label text="My Subscriptions" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TableView fx:id="subscriptionTable">
        <columns>
            <TableColumn fx:id="routineNameColumn" text="Routine Name"/>
            <TableColumn fx:id="startDateColumn" text="Start Date"/>
            <TableColumn fx:id="endDateColumn" text="End Date"/>
        </columns>
    </TableView>

    <Button text="Cancel Subscription" onAction="#handleCancelSubscription" />
</VBox>
