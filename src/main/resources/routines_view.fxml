<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER" spacing="10">

    <Label text="My Routines" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TableView fx:id="routineTable">
        <columns>
            <TableColumn fx:id="nameColumn" text="Nombre"/>
            <TableColumn fx:id="descriptionColumn" text="Descripción"/>
            <TableColumn fx:id="durationColumn" text="Duración (min)"/>
        </columns>
    </TableView>

    <Button text="Crear Rutina" onAction="#handleCreateRoutine" />
    <Button text="Editar Rutina" onAction="#handleEditRoutine" />
    <Button text="Eliminar Rutina" onAction="#handleDeleteRoutine" />
</VBox>
